#!/usr/bin/env ruby

require_relative "../lib/kindle"
require 'highline/import'

result = []

login = if amazon_username = ENV['AMAZON_USERNAME']
  puts "Using Amazon.com username: #{amazon_username}"
  amazon_username
else
  ask("Enter your Amazon.com username:  ") { |q| q.echo = true } unless login = ARGV[0]
end
passwd = ENV['AMAZON_PASSWORD'] || ask("Enter your Amazon.com password (This is not stored):  ") { |q| q.echo = "*" }

puts "Put the following lines in .env (Remove AMAZON_USERNAME and AMAZON_PASSWORD if you have)"
puts
puts "AMAZON_USERNAME_CODE=#{Kindle::Converter.encode(login)}"
puts "AMAZON_PASSWORD_CODE=#{Kindle::Converter.encode(passwd)}" if passwd.to_s.size > 0
